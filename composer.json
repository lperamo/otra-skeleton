{
  "name": "otra/skeleton",
  "type": "project",
  "license": "X11",
  "description": "A minimal OTRA project recommended to create bare bones applications",
  "require": {
    "ext-mbstring": "*",
    "otra/otra": "^1.0.0",
    "php": ">=7.4.0"
  },
  "config": {
    "bin-dir" : "bin",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "scripts": {
    "otra-update": [
      "@php vendor/otra/otra/src/console/architecture/createGlobalConstants/createGlobalConstantsTask.php",
      "@php bin/otra.php version",
      "@php bin/otra.php init",
      "@php bin/otra.php buildDev 0 7 true 1"
    ],
    "post-install-cmd": "@otra-update",
    "post-update-cmd": "@otra-update"
  },
  "scripts-descriptions": {
    "otra-update": "Checks the basic architecture of the OTRA project and fixes it if needed."
  }
}
