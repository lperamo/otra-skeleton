{
  "name": "otra/skeleton",
  "type": "project",
  "license": "X11",
  "description": "A minimal OTRA project recommended to create bare bones applications",
  "require": {
    "ext-mbstring": "*",
    "otra/otra": "V1.0.0-alpha.2.0.0",
    "php": ">=7.4.0"
  },
  "config": {
    "bin-dir" : "bin",
    "sort-packages": true
  },
  "scripts": {
    "otra-update": "php bin/otra.php init",
    "post-install-cmd": "@otra-update",
    "post-update-cmd": "@otra-update"
  }
}
